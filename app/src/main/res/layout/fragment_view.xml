<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gbw.seesselm.vehicle_maintenance.ViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DisplayCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#d6d7d7"
            android:focusable="false"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/DisplayCar"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Edit Car"
                android:id="@+id/btnDispEdit"
                android:layout_weight="1"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Delete Car"
                android:id="@+id/btnDispDel"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
